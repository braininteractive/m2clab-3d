{% extends('layout/base.twig') %}

{% block content %}
    <header>
        <div class="row">
            <div class="small-12 columns">
                <h1>{{ shop }}</h1>
            </div>
        </div>
    </header>
    <div id="models">
        <div class="row">
            <input type="text" placeholder="Search" class="search">
        </div>

        <ul class="row list">
            {% for model in models %}
                <li class="small-6 medium-4 large-3 columns model">
                    <a href="/shop/{{ shop }}/{{ model.name }}">
                        <div class="model--image"></div>
                        <h2 class="model--name">{{ model.name }}</h2>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}